<h2>Make a burger</h2>

<ul>
  {{#each burgers}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR IT</button>
        </form>

      </li>
  {{/each}}
</ul>


<form id="add" class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
